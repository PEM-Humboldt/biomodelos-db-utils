{
    "type": "object",
    "properties":{
        "acceptedNameUsage": { "type": "string"},	
        "altitudinalOutlier": { "type": ["boolean", "null"], "default" : null },
        "basisOfRecord": { "type": "string", "default": "" , "enum": ["FossilSpecimen", "HumanObservation", "MachineObservation", "MaterialSample", "PreservedSpecimen", "LivingSpecimen", "Occurrence", "MaterialCitation"]},
        "catalogNumber": { "type": "string", "default": ""},
        "collectionCode": { "type": "string", "default": "" },
        "contributedRecord": { "type": ["boolean" , "null"], "default" : null },
        "country": { "type": "string", "default" : "" },
        "county": { "type": "string", "default" : "" },
        "createdCitationBm": { "type": "string", "default" : "" },
        "createdCommentsBm": { "type": "string", "default" : "" },
        "dateIdentified": { "type": ["string", "null"], "default" : null, "format": "date-time" },
        "day": { "type": ["number", "null"], "default" : null , "minimum": 1, "maximum": 31},
        "decimalLatitude": { "type": "number", "minimum": -90, "maximum": 90},
        "decimalLongitude": { "type": "number", "minimum": -180, "maximum": 180},
        "downloadDate": { "type": ["string", "null"], "default" : null, "format": "date-time" },
        "environmentalOutlier": { "type": ["boolean" , "null"], "default" : null },
        "identifiedBy": { "type": "string", "default" : "" },
        "institutionCode": { "type": "string", "default" : "" },
        "inUrbanArea": { "type": ["boolean" , "null"], "default" : null },
        "locality": { "type": "string", "default" : "" },
        "minimumElevationInMeters": { "type": ["number", "null"], "default" : null , "minimum": 0, "maximum": 8000},
        "month": { "type": ["number", "null"], "default" : null , "minimum": 1, "maximum": 12},
        "occurrenceID": { "type": "string"},
        "recordedBy": { "type": "string", "default" : "" },
        "reported": { "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "geoIssueBm": {"type": "boolean", "default" : false},
                    "originVagrant":{ "type": "boolean", "default" : false },
                    "oldTaxonomyBm":{ "type": "boolean", "default" : false },
                    "originIntroduced":{ "type": "boolean", "default" : false },
                    "otherIssuesBm":{ "type": "boolean", "default" : false },
                    "userIdBm": { "type": ["number", "null"], "default" : false },
                    "commentsBm" : { "type": "string", "default" : "" },
                    "idIssueBm": { "type": "boolean" , "default" : false },
                    "reportedDate": { "type": ["string", "null"], "default" : null, "format": "date-time" }
                },
                "required": ["reportedDate", "idIssueBm", "geoIssueBm", "userIdBm", "originVagrant", "oldTaxonomyBm", "originIntroduced",
                 "otherIssuesBm", "commentsBm"],
                "additionalProperties": false
            },
            "default" : []
        },
        "reportedDate": { "type": ["string", "null"], "default" : null, "format": "date-time" },
        "source": { "type": "string", "default" : "" },
        "spatialDuplicated": { "type": "boolean", "default" : false },
        "speciesOriginal": { "type": "string"},
        "stateProvince": { "type": "string", "default": "" },
        "taxID": { "type": "number"},
        "updated": { "type": "array", "default" : []},
        "url": { "type": "string", "default" : ""},
        "userIdBm": { "type": ["number", "null"], "default" : null },
        "verbatimElevation": { "type": ["number", "null"], "default" : null },
        "visualizationPrivileges": { "type": "number", "default" : 0, "enum" : [0, 1]},
        "year": { "type": ["number", "null"], "default" : null, "minimum": 1800}
    },
    "required": [
        "acceptedNameUsage",
        "speciesOriginal",
        "decimalLatitude",
        "decimalLongitude",
        "occurrenceID",
        "taxID",
        "visualizationPrivileges"
    ],
    "allOf": [
        {
            "if": {
                "properties": { "month": { "const": 2 } }
            },
            "then": {
                "properties": {
                "day": { "maximum": 29 }
                }
            }
            },
            {
            "if": {
                "properties": { "month": { "enum": [4, 6, 9, 11] } }
            },
            "then": {
                "properties": {
                "day": { "maximum": 30 }
                }
            }
        }
    ],
    "additionalProperties": false
}
